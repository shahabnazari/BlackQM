# Environment Configuration for VQMethod
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# AI Configuration Note
# All AI operations are handled by the backend API
# OpenAI keys should ONLY be configured in backend/.env
# Frontend connects to backend at NEXT_PUBLIC_BACKEND_URL

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-min-32-chars

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vqmethod

# Security
JWT_SECRET=your-jwt-secret-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
DAILY_AI_BUDGET_USD=10

# Error Monitoring (Optional but Recommended)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=true

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vqmethod-uploads

# Monitoring
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Development Only
# Set to 'true' only in development
SKIP_AUTH_CHECK=false
MOCK_AI_RESPONSES=false