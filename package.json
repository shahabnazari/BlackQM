{
  "name": "vqmethod",
  "version": "1.0.0",
  "private": true,
  "description": "VQMethod - Advanced Q Methodology Research Platform with Apple Design Excellence",
  "_comment": "⚠️ IMPORTANT: This is the workspace root. DO NOT add app code here! All Next.js code goes in /frontend/, all NestJS code goes in /backend/",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "_workspaceInfo": {
    "frontend": "Next.js app - All UI/React code here. Access at http://localhost:3000",
    "backend": "NestJS API - All server code here. Access at http://localhost:4000",
    "CRITICAL": "NEVER create /app, /components, or /pages in root - they go in /frontend/!"
  },
  "scripts": {
    "dev": "node scripts/dev-ultimate.js",
    "stop": "node scripts/stop-ultimate.js",
    "restart": "npm run stop && sleep 2 && npm run dev",
    "dev:clean": "npm run stop && rm -rf frontend/.next backend/dist logs/*.log && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --workspace=@vqmethod/frontend",
    "build:backend": "npm run build --workspace=@vqmethod/backend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test --workspace=@vqmethod/frontend",
    "test:backend": "npm run test --workspace=@vqmethod/backend",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "build:strict": "npm run typecheck && npm run build",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "rm -rf frontend/.next frontend/node_modules frontend/coverage frontend/playwright-report",
    "clean:backend": "rm -rf backend/dist backend/node_modules backend/coverage",
    "clean:all": "npm run clean && rm -rf node_modules",
    "validate:structure": "node scripts/validate-structure.js",
    "create": "node scripts/create-file.js --interactive",
    "create:component": "node scripts/create-file.js react-component",
    "create:apple": "node scripts/create-file.js apple-ui-component",
    "create:page": "node scripts/create-file.js page",
    "create:hook": "node scripts/create-file.js hook",
    "create:module": "node scripts/create-file.js module",
    "create:service": "node scripts/create-file.js service",
    "create:test": "node scripts/create-file.js test",
    "watch:files": "node scripts/file-watcher.js",
    "prepare": "husky",
    "postinstall": "npm run prepare"
  },
  "keywords": [
    "q-methodology",
    "research-platform",
    "apple-design",
    "nextjs",
    "nestjs",
    "typescript",
    "monorepo"
  ],
  "author": "VQMethod Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vqmethod.git"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.17",
    "@react-three/fiber": "^8.15.12",
    "@types/react-rnd": "^7.4.4",
    "chart.js": "^4.5.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "react-chartjs-2": "^5.3.0",
    "react-dropzone": "^14.3.8",
    "react-rnd": "^10.5.2",
    "three": "^0.180.0",
    "zustand": "^5.0.8"
  }
}
