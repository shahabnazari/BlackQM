{
  "name": "vqmethod",
  "version": "0.1.0",
  "private": true,
  "description": "Advanced Q Methodology Research Platform with Apple Design Excellence",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "build:strict": "npm run type-check && next build",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "prepare": "husky",
    "backend:dev": "npm run start:dev --prefix backend",
    "backend:build": "npm run build --prefix backend",
    "backend:test": "npm run test --prefix backend",
    "apple-design:validate": "node scripts/apple-design-validate.js",
    "validate": "npm run typecheck && npm run test && npm run apple-design:validate",
    "clean": "rm -rf .next node_modules coverage playwright-report test-results",
    "clean:all": "npm run clean && rm -rf backend/node_modules"
  },
  "keywords": [
    "q-methodology",
    "research-platform",
    "apple-design",
    "nextjs",
    "nestjs",
    "typescript"
  ],
  "author": "VQMethod Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint-config-next": "^15.5.2",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
