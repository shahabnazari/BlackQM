# Database Configuration
DATABASE_URL="file:./dev.db"
# For production with PostgreSQL and connection pooling:
# DATABASE_URL="postgresql://user:pass@host:5432/dbname?connection_limit=10&pool_timeout=30"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
BCRYPT_ROUNDS=12
ENABLE_VIRUS_SCANNING=false

# Performance Monitoring (Sentry)
# SENTRY_DSN="https://your-key@sentry.io/your-project"
# SENTRY_ENVIRONMENT="development"

# OpenAI Configuration (Phase 6.86b)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_ORG_ID=""
AI_RATE_LIMIT_PER_MIN=10
AI_DAILY_BUDGET_USD=50
AI_CACHE_TTL_SECONDS=3600

# NCBI E-utilities API Key (Optional - for PubMed/PMC)
# Benefits: Increased rate limit from 3 req/sec to 10 req/sec
# Register at: https://www.ncbi.nlm.nih.gov/account/register/
# Leave blank to use default rate limits (3 requests/second)
# Documentation: https://www.ncbi.nlm.nih.gov/books/NBK25497/
NCBI_API_KEY=""

# CrossRef Polite Pool (Optional - for better CrossRef performance)
# Benefits: Higher priority queue, better performance, more reliable service
# NO registration required - just add your contact email
# Leave blank to use default email (research@vqmethod.com)
# Documentation: https://github.com/CrossRef/rest-api-doc#good-manners--more-reliable-service
CROSSREF_CONTACT_EMAIL=""

# CORE API Key (Optional - for open access aggregator)
# Benefits: 10 req/sec, 250M+ papers, full-text access
# Register at: https://core.ac.uk/services/api
# Leave blank to disable CORE source
# Documentation: https://core.ac.uk/docs/
CORE_API_KEY=""

# Springer Open Access API Key (Optional - for Springer Nature publications)
# Benefits: 5,000 calls/day, 15M+ documents, Nature journals access
# Register at: https://dev.springernature.com/
# Leave blank to disable Springer source
# Documentation: https://dev.springernature.com/docs
SPRINGER_API_KEY=""

# Redis Cache (Optional - for AI response caching)
REDIS_URL="redis://localhost:6379"