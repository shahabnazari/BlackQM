#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run type-check
echo "ğŸ“ Type checking..."
npm run typecheck

# Run tests on changed files only
echo "ğŸ§ª Running tests on changed files..."
npx vitest related --run $(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' | tr '\n' ' ') || npm run test

echo "âœ… Pre-commit checks passed!"
